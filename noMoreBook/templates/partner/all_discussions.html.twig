{% extends 'base.html.twig' %}

{% block title %}Mes discussions
{% endblock %}

{% block body %}
	<div class="max-w-4xl mx-auto px-4">
		<h1 class="text-2xl font-bold text-indigo-700 mb-6">Mes discussions avec les clients</h1>

		{% if clients|length > 0 %}
			<ul class="space-y-4">
				{% for client in clients %}
					<li class="bg-white shadow-sm border rounded-lg p-4 flex items-center justify-between">
						<div class="text-gray-800">
							<span class="font-medium">Client :</span>
							{{ client.email }}
						</div>
						<a href="{{ path('partner_contact_client', {clientId: client.id}) }}" class="inline-block px-4 py-2 bg-indigo-600 text-white text-sm font-medium rounded hover:bg-indigo-700 transition">
							Voir la discussion
						</a>
					</li>
				{% endfor %}
			</ul>
		{% else %}
			<div class="bg-yellow-100 text-yellow-800 px-4 py-3 rounded-lg shadow mb-4">
				Aucune discussion pour le moment.
			</div>
		{% endif %}

		<div class="mt-6">
			<a href="{{ path('partner_dashboard') }}" class="inline-block px-4 py-2 bg-gray-600 text-white text-sm font-medium rounded hover:bg-gray-700 transition">
				‚Üê Retour au tableau de bord
			</a>
		</div>
	</div>
{% endblock %}
