{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block body %}
	<div class="max-w-xl mx-auto px-4 py-8">
		{% for message in app.flashes('error') %}
			<div class="bg-red-100 text-red-800 px-4 py-3 rounded mb-4">
				{{ message }}
			</div>
		{% endfor %}

		<h1 class="text-3xl font-bold text-indigo-700 mb-6">Cr√©er un compte</h1>

		{{ form_start(registrationForm, {'attr': {'class': 'space-y-6'}}) }}
		<div>
			{{ form_label(registrationForm.type, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
			{{ form_widget(registrationForm.type, {
                'attr': {
                    'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500'
                }
            }) }}
		</div>

		<div id="client-fields" class="space-y-4">
			<div>
				{{ form_label(registrationForm.firstName, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
				{{ form_widget(registrationForm.firstName, {
                    'attr': {
                        'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500'
                    }
                }) }}
			</div>
			<div>
				{{ form_label(registrationForm.lastName, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
				{{ form_widget(registrationForm.lastName, {
                    'attr': {
                        'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500'
                    }
                }) }}
			</div>
		</div>

		<div id="partner-fields" class="space-y-4">
			<div>
				{{ form_label(registrationForm.companyName, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
				{{ form_widget(registrationForm.companyName, {
                    'attr': {
                        'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500'
                    }
                }) }}
			</div>
		</div>

		<div>
			{{ form_label(registrationForm.email, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
			{{ form_widget(registrationForm.email, {
                'attr': {
                    'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500'
                }
            }) }}
		</div>

		<div>
			{{ form_label(registrationForm.plainPassword, 'Mot de passe', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
			{{ form_widget(registrationForm.plainPassword, {
                'attr': {
                    'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500'
                }
            }) }}
		</div>

		<div class="flex items-center">
			{{ form_widget(registrationForm.agreeTerms, {
                'attr': {
                    'class': 'rounded border-gray-300 text-indigo-600 focus:ring-indigo-500'
                }
            }) }}
			<span class="ml-2 text-sm text-gray-700">{{ form_label(registrationForm.agreeTerms) }}</span>
		</div>

		<button type="submit" class="w-full bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700 transition">
			S'inscrire
		</button>
		{{ form_end(registrationForm) }}
	</div>

	<script>
		function toggleFields() {
const type = document.getElementById('registration_form_type').value;
document.getElementById('client-fields').style.display = (type === 'client') ? 'block' : 'none';
document.getElementById('partner-fields').style.display = (type === 'partner') ? 'block' : 'none';
}
document.getElementById('registration_form_type').addEventListener('change', toggleFields);
window.addEventListener('DOMContentLoaded', toggleFields);
	</script>
{% endblock %}
