{% extends 'base.html.twig' %}

{% block title %}Password Reset Email Sent
{% endblock %}

{% block body %}
	<div class="min-h-screen flex items-center justify-center bg-gray-100 py-12 px-4 sm:px-6 lg:px-8">
		<div class="max-w-md w-full bg-white p-8 rounded-2xl shadow-lg space-y-6 text-center">
			<h1 class="text-2xl font-bold text-gray-900">Check your email</h1>

			<p class="text-sm text-gray-700">
				If an account matching your email exists, we’ve just sent a link to reset your password.
				<br/>
				This link will expire in
				<span class="font-medium text-gray-900">
					{{ resetToken.expirationMessageKey|trans(resetToken.expirationMessageData, 'ResetPasswordBundle') }}.
				</span>
			</p>

			<p class="text-sm text-gray-600">
				If you don’t receive an email, please check your spam folder or
				<a href="{{ path('app_forgot_password_request') }}" class="text-indigo-600 hover:text-indigo-800 font-medium">
					try again
				</a>.
			</p>
		</div>
	</div>
{% endblock %}
