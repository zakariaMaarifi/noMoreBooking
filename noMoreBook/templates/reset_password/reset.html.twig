{% extends 'base.html.twig' %}

{% block title %}Reset your password
{% endblock %}

{% block body %}
	<div class="min-h-screen flex items-center justify-center bg-gray-100 py-12 px-4 sm:px-6 lg:px-8">
		<div class="max-w-md w-full space-y-8 bg-white p-8 rounded-2xl shadow-lg">
			<div class="text-center">
				<h1 class="text-2xl font-bold text-gray-900">Reset your password</h1>
				<p class="mt-2 text-sm text-gray-600">Please enter your new password below.</p>
			</div>

			{{ form_start(resetForm, {'attr': {'class': 'space-y-6'}}) }}
			<div>
				{{ form_label(resetForm.plainPassword, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
				{{ form_widget(resetForm.plainPassword, {
                    'attr': {
                        'class': 'appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'
                    }
                }) }}
				{{ form_errors(resetForm.plainPassword) }}
			</div>

			<div>
				<button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
					Reset password
				</button>
			</div>
			{{ form_end(resetForm) }}
		</div>
	</div>
{% endblock %}
